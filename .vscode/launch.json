{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug with Poetry",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/streetrace/main.py", // or whatever entry point
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "args": [
        "--model",
        "anthropic/claude-sonnet-4-20250514",
        "--verbose",
        "--prompt",
        "List most popular apple cultivars you know in a file named APPLES.md"
      ],
      "justMyCode": false
    }
  ]
}
